#!/usr/bin/env bash
#
# [Release]: Blackbuntu 22.04.1 LTS amd64
# [Website]: https://blackbuntu.org/p/releases/?ver=22.04.1
# [License]: http://www.gnu.org/licenses/gpl-3.0.html
#
# Ascii Art : https://www.askapache.com/online-tools/figlet-ascii/

## Help Menu
## ---------
function helpmenu()
{
	echo 
	echo "Usage: blackbuntu [-h] [-u] [-g] [-l] [-r] [-c]"
	echo
	echo "Options:"
	echo "-h, --help			show this help"
	echo "-u, --update			update the APT system cache"
	echo "-g, --upgrade			upgrade the core distribution and packages"
	echo "-l, --list			list all BlackBuntu packages"
	echo "-r, --remove			remove orphaned and unnecessary package(s)"
	echo "-c, --clean			delete all temporary files, traces and logs"	
}

## Callback
## --------
while test $# -gt 0;
do
	case "$1" in
    	-h|--help)
      		helpmenu
      		exit 1
      		;;
    	-u|--update)
      		echo "/usr/local/bin/blackbuntu-updater"
        	exit 1
      		;;
    	-g|--upgrade)
      		echo "/usr/local/bin/blackbuntu-upgrader"
        	exit 1
      		;;
    	-l|--list)
      		echo "/usr/local/bin/blackbuntu-lister"
        	exit 1
      		;;
      	-r|--remove)
      		echo "/usr/local/bin/blackbuntu-remover"
        	exit 1
      		;;
    	-c|--clean)
      		echo "/usr/local/bin/blackbuntu-cleaner"
        	exit 1
      		;;
      	*)
      		helpmenu
      		exit 1
      		;;
  	esac
done

## Check Argument
## --------------
if [ $# -eq 0 ]
then
    helpmenu
fi
